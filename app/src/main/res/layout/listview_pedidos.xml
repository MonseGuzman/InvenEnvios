<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/FolioTextView_P"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Folio: 0001"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/FechaTextView_P"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="29/06/2018"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"/>

                <CheckBox
                    android:id="@+id/EstatusCheckbox_P"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:textSize="15dp"
                    android:text="Entregado"
                    android:visibility="visible"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"/>
            </LinearLayout>

        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/TotalTextView_P"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Total: $"
                android:textSize="17dp"
                android:textColor="#F74B4B"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/ClienteTextView_P"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Cliente: Andrea Monserrat Guzmán López"
                android:textSize="15dp"
                android:textColor="@color/secondaryColor"/>
        </TableRow>

    </TableLayout>

</RelativeLayout>